class student {
public:
	string m_name;
	int m_id;
	void showStudent()
	{
		cout << "姓名：  " << m_name << "学号：  " << endl;
	}
};
int main()
{
	student s1;
	s1.m_name = "罗昊";
	s1.m_id = 21110200047;
	s1.showStudent();
	system("pause");
	return 0;
}
